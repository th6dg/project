<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ComfirmOrderActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0277BD"
        app:titleTextColor="@color/white"
        app:title="Xác nhận thông tin"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrderDoctor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/tvSumPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: "
        android:textColor="#FB0707"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvAddOrder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Thêm lịch khám"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btnComfirmOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lịch"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

</LinearLayout>